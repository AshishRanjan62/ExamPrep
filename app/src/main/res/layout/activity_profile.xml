<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"


           >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="@drawable/circleimage">
            </RelativeLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_125"
                android:layout_height="@dimen/dp_125"
                app:cardCornerRadius="@dimen/dp_90"
                android:layout_centerInParent="true"

                android:layout_marginTop="@dimen/dp_190">
                <ImageView
                    android:id="@+id/ivimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"



                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_35"
                android:gravity="center"



                android:textSize="@dimen/dp_38"
                android:maxLength="20"
                android:fontFamily="@font/latobold"
                android:layout_marginTop="@dimen/dp_210"
                android:id="@+id/tvname"
                android:textStyle="bold"

                />



        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_30"

            android:orientation="vertical"
            android:background="@drawable/backgroundprofile">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Your Profile"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdsplayblack"

            android:textSize="@dimen/dp_32"
            android:textColor="#0B0000"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Name"
                android:fontFamily="@font/arvoregular"
                android:layout_marginStart="@dimen/dp_20"
                android:padding="@dimen/dp_6"
                android:textSize="@dimen/dp_22"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginStart="@dimen/dp_85"
                android:layout_marginEnd="@dimen/dp_40"
                app:cardCornerRadius="@dimen/dp_5"
                app:contentPadding="@dimen/dp_2"
                app:cardElevation="@dimen/dp_9">


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Date Of Birth"
                android:fontFamily="@font/arvoregular"
                android:layout_marginStart="@dimen/dp_20"

                android:textSize="@dimen/dp_22"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_30"
                app:cardCornerRadius="@dimen/dp_4"

                app:cardElevation="@dimen/dp_9"
               >

                <Button
                    android:id="@+id/dateButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Date"
                    android:background="@android:color/transparent"


                    android:textColor="#F7000000"
                    android:paddingTop="@dimen/dp_10"

                    android:paddingStart="@dimen/dp_35"
                    android:paddingEnd="@dimen/dp_25"
                    android:textSize="@dimen/dp_20"
                    android:gravity="left"
                    android:fontFamily="@font/robotoight"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Contact No"
                android:layout_marginStart="@dimen/dp_20"
                android:fontFamily="@font/arvoregular"
                android:padding="@dimen/dp_4"
                android:textSize="@dimen/dp_22"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_marginEnd="@dimen/dp_30"
                app:cardCornerRadius="@dimen/dp_5"

                app:cardElevation="@dimen/dp_9"
               >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="10"

                    android:textSize="@dimen/dp_25"

                    android:fontFamily="@font/robotoight"
                    android:inputType="number"
                    android:background="@drawable/selector"
                    android:paddingStart="@dimen/dp_35"
                    android:paddingEnd="@dimen/dp_25"

                   />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Gender"
                android:layout_marginStart="@dimen/dp_20"
                android:fontFamily="@font/arvoregular"
                android:padding="@dimen/dp_6"
                android:textSize="@dimen/dp_22"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginStart="@dimen/dp_74"
                android:layout_marginEnd="@dimen/dp_30"
                app:cardCornerRadius="@dimen/dp_4"

                app:cardElevation="@dimen/dp_9">
                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:padding="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_3"


                    app:background="@drawable/selector"



                    android:paddingStart="@dimen/dp_7"
                    android:fontFamily="@font/robotoight"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/buttonbackground"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_60"
           >

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"





                android:text="Submit"
                android:textSize="@dimen/dp_20"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>
