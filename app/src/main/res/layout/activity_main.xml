<!--                android:layout_gravity="center"-->
<!--                android:src="@drawable/download"/>-->
<!--        </androidx.cardview.widget.CardView>-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/dp_480"
                android:layout_height="@dimen/dp_220"

                android:id="@+id/lottie"
                app:lottie_autoPlay="true"


                app:lottie_rawRes="@raw/animationhome"
                app:lottie_loop="true">


            </com.airbnb.lottie.LottieAnimationView>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="@dimen/dp_28"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please  select Your account to sign in"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_80"
         
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:src="@drawable/login36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to Register or log in"
                android:textSize="@dimen/dp_20"
                android:padding="@dimen/dp_8"
                android:layout_gravity="center"
                android:fontFamily="@font/robotoight"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"

            >

            <com.google.android.gms.common.SignInButton
                android:id="@+id/bt_sign_in"

                android:layout_width="@dimen/dp_370"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>

</ScrollView>
